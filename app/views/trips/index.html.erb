<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.7) 50%), url('<%= image_path('banner1.jpg')%>');">
  <div>
    <div class="hidden-xs hidden-sm">
      <%= image_tag("LogoMakr_8aOmEp.png")%>
    </div>
    <h1 style="font-family: 'Shadows Into Light';">PANAMAKARE</h1>
    <p style="font-family:  'Raleway' ;">Trips con conciencia</p>
    <br>
    <i class="fa fa-angle-double-down symbols" aria-hidden="true"></i>

  </div>
</div>
<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Trips</h1>
  <hr>
  <% @trips.each do |trip| %>
  <div class="card-trip">
    <img src='<%= image_path('lagloria3.png')%>' />
    <div class="card-trip-infos">
      <div>
        <h1 style="font-family: 'Shadows Into Light';"><%=trip.title%></h1>
        <p>
          <strong><i class="fas fa-calendar-week"></i> Date:</strong> <br>
          <%= trip.date %>
        </p>

        <p>
          <strong> <i class="fas fa-location-arrow"></i> Location:</strong> <br>
          <%= trip.location %>
        </p>

        <p>
          <strong><i class="fas fa-file-alt"></i> Description:</strong> <br>
          <%= trip.description %>
        </p>
        <br>
        <%= link_to trip_path(trip) do %>
        <h4 class="btn btn-panamakare">Registrate</h4>
        <% end %>
      </div>

    </div>
  </div>
  <% end %>
</div>


<br>

